<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_ads_big"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@id/bt_new_project"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iconplus"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/plus"
                            app:tint="@color/white" />


                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iconplus"
                            android:layout_centerInParent="true"
                            android:text="NEW PROJECT"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:gravity="center"

                        android:orientation="horizontal"
                        >


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"
                            android:background="@drawable/round_bg"
                            android:backgroundTint="@color/bg_gray"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/bt_rate"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/rating" />

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent"

                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@drawable/round_bg"
                            android:backgroundTint="@color/bg_gray"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@id/bt_share"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/share1" />

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                />


                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="@dimen/_12sdp"
                        android:layout_width="match_parent"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"

                        android:gravity="center"
                        android:orientation="horizontal"
                        >




                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"

                            android:background="@drawable/round_bg"
                            android:backgroundTint="@color/bg_gray"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/bt_privacy"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/pp" />

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent"

                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="@dimen/_70sdp"
                            android:gravity="center"
                            android:background="@drawable/round_bg"
                            android:backgroundTint="@color/bg_gray"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/bt_more"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/other" />

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More Apps"
                                android:textColor="@color/white"
                                android:textStyle="bold"

                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    >

                    <TextView
                        android:id="@+id/txt"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Videos"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        />

                    <View
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0.5dp"
                        />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>