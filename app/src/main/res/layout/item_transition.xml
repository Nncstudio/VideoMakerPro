<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70.0dip"
    android:layout_height="90.0dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">





    <RelativeLayout
        android:id="@+id/rlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/transfer_img"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:layout_centerHorizontal="true"
            android:padding="5.0dip">


        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            app:tint="@color/bg_purpal"
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:padding="7dp"
            android:src="@drawable/video_ad"
            android:background="@drawable/ic_cercle"
            android:id="@+id/premium"
            />



    </RelativeLayout>

    <TextView
        android:layout_below="@id/rlay"
        android:id="@id/transfer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        android:theme="@style/TextBelowImage" />
</RelativeLayout>